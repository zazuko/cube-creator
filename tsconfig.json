{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": [
    "packages",
    "apis",
    "cli"
  ],
  "exclude": [
    "node_modules"
  ]
}
