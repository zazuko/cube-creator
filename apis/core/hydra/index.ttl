prefix hydra:  <http://www.w3.org/ns/hydra/core#>
prefix code:   <https://code.described.at/>
prefix auth:   <http://hypermedia.app/auth#>
PREFIX scopes: <https://cube-creator.zazuko.com/scopes#>

<api>
  a
    hydra:ApiDocumentation ;
  hydra:entrypoint
    <> ;
  hydra:supportedClass
    hydra:Resource,
    hydra:Collection
.

hydra:Resource
  auth:scopes
    scopes:pipelines-read ;
  hydra:supportedOperation
    [
      hydra:method
        "GET" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <node:@hydrofoil/labyrinth/resource#get>
        ]
    ] .

hydra:Collection
  auth:scopes
    scopes:pipelines-read ;
  hydra:supportedOperation
    [
      hydra:method
        "GET" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <node:@hydrofoil/labyrinth/collection#get>
        ]
    ] .
