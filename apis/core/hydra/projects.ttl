BASE           <urn:hydra-box:api>
PREFIX cc:     <https://cube-creator.zazuko.com/vocab#>
prefix hydra:  <http://www.w3.org/ns/hydra/core#>
prefix code:   <https://code.described.at/>
prefix auth:   <http://hypermedia.app/auth#>
PREFIX scopes: <https://cube-creator.zazuko.com/scopes#>

cc:CubeProject
  a
    hydra:Class .

cc:ProjectsCollection
  a
    hydra:Class ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        cc:CreateProjectAction ;
      hydra:title
        "New project" ;
      hydra:method
        "POST" ;
      hydra:expects
        cc:CubeProject,
        <shape/cube-project/create> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/cube-projects#post> ;
        ] ;
      auth:scopes
        scopes:pipelines-write
    ] .
