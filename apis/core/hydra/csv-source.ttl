BASE           <urn:hydra-box:api>
PREFIX cc:     <https://cube-creator.zazuko.com/vocab#>
prefix hydra:  <http://www.w3.org/ns/hydra/core#>
prefix code:   <https://code.described.at/>
prefix schema: <http://schema.org/>
prefix sh:     <http://www.w3.org/ns/shacl#>
prefix query:  <http://hypermedia.app/query#>

cc:CSVSourceCollection
  a
    hydra:Class ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        cc:UploadCSVAction ;
      hydra:title
        "Upload CSV" ;
      hydra:method
        "POST" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/csv-source#post> ;
        ] ;
    ] .

cc:CSVSource
  a
    hydra:Class ;
  query:preprocess
    [
      a
        code:EcmaScript ;
      code:link
        <file:handlers/csv-source#presignUrl> ;
    ] ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        cc:GetCSVSourceAction ;
      hydra:title
        "Get CSV Source" ;
      hydra:method
        "GET" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/csv-source#get> ;
        ]
    ],
    [
      a
        hydra:Operation,
        schema:DeleteAction ;
      hydra:title
        "Delete CSV" ;
      hydra:method
        "DELETE" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/csv-source#remove> ;
        ]
    ],
    [
      a
        hydra:Operation,
        schema:UpdateAction ;
      hydra:title
        "Edit CSV settings" ;
      hydra:method
        "PUT" ;
      hydra:expects
        cc:CSVSource,
        <shape/csv-source/update> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/csv-source#put> ;
        ]
    ] ;
.

<shape/csv-source/update>
  a
    sh:Shape .
