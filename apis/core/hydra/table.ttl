BASE          <urn:hydra-box:api>
PREFIX cc:    <https://cube-creator.zazuko.com/vocab#>
prefix hydra: <http://www.w3.org/ns/hydra/core#>
prefix code:  <https://code.described.at/>
prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
prefix schema:   <http://schema.org/>
prefix sh:    <http://www.w3.org/ns/shacl#>
prefix query: <http://hypermedia.app/query#>

cc:TableCollection
  a
    hydra:Class ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        schema:CreateAction ;
      hydra:title
        "Create table" ;
      hydra:method
        "POST" ;
      hydra:expects
        cc:Table,
        <shape/table/create> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/table/create#post> ;
        ] ;
    ] .

<shape/table/create> a sh:Shape .

cc:Table
  a
    hydra:Class ;
  query:include
    cc:columnMapping ;
  hydra:supportedProperty
    [
      a
        hydra:SupportedProperty ;
      hydra:property
        cc:csvw ;
    ] ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        schema:DeleteAction ;
      hydra:title
        "Delete Table" ;
      hydra:method
        "DELETE" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/table/delete#remove> ;
        ] ;
    ] ,
    [
      a
        hydra:Operation,
        schema:UpdateAction ;
      hydra:title
        "Edit table" ;
      hydra:method
        "PUT" ;
      hydra:expects
        cc:Table,
        <shape/table/update> ;
        code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/table/update#put> ;
        ] ;
    ],
    [
      a
        hydra:Operation,
      cc:CreateColumnMappingAction ;
      hydra:title
        "Create Column Mapping" ;
      hydra:method
        "POST" ;
      hydra:expects
        cc:ColumnMapping,
        <shape/column-mapping/create> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/column-mapping#post> ;
        ]
    ] .


<shape/table/update>
  a
    sh:Shape .

<shape/column-mapping/create>
  a
    sh:Shape .

cc:csvw
  a
    rdf:Property,
    hydra:Link ;
  hydra:supportedOperation
    [
      a
        hydra:Operation ;
      hydra:title
        "Get Table's CSVW mappings" ;
      hydra:method
        "GET" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/table/csvw#get> ;
        ]
    ]
.
