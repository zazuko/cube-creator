BASE              <urn:hydra-box:api>
PREFIX cc:        <https://cube-creator.zazuko.com/vocab#>
prefix hydra:     <http://www.w3.org/ns/hydra/core#>
prefix hydra-box: <http://hydra-box.org/schema/>
prefix code:      <https://code.described.at/>
prefix query:     <http://hypermedia.app/query#>
prefix sh:        <http://www.w3.org/ns/shacl#>
PREFIX schema:    <http://schema.org/>
PREFIX void:      <http://rdfs.org/ns/void#>
prefix view:      <http://ns.bergnet.org/cube-view/>

void:Dataset
  a
    hydra:Class ;
  query:include
    cc:dimensionMetadata ;
  query:preprocess
    [
      a
        code:EcmaScript ;
      code:link
        <file:handlers/dataset#loadCubes> ;
    ] ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        schema:UpdateAction ;
      hydra:title
        "Edit metadata" ;
      hydra:method
        "PUT" ;
      hydra:expects
        void:Dataset,
        <shape/dataset/edit-metadata> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/dataset#put> ;
        ] ;
    ] ;
.

cc:Observations a hydra:Class ;
  hydra:supportedOperation
    [
      a
        hydra:SupportedOperation ;
      hydra:method
        "GET" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/observations#query> ;
        ] ;
      hydra-box:variables
        [
          a
            hydra:IriTemplate ;
          hydra:template
            "/observations?cube={cube}&graph={graph}{&view,pageSize,page}" ;
          hydra:mapping
            [
              a
                hydra:IriTemplateMapping ;
              hydra:property
                cc:cube ;
              hydra:required
                true ;
              hydra:variable
                "cube" ;
            ] ,
            [
              a
                hydra:IriTemplateMapping ;
              hydra:property
                cc:cubeGraph ;
              hydra:required
                true ;
              hydra:variable
                "graph" ;
            ] ,
            [
              a
                hydra:IriTemplateMapping ;
              hydra:property
                view:view ;
              hydra:required
                false ;
              hydra:variable
                "view" ;
            ] ,
            [
              a
                hydra:IriTemplateMapping ;
              hydra:property
                hydra:limit ;
              hydra:required
                false ;
              hydra:variable
                "pageSize" ;
            ] ,
            [
              a
                hydra:IriTemplateMapping ;
              hydra:property
                hydra:pageIndex ;
              hydra:required
                false ;
              hydra:variable
                "page" ;
            ] ;
        ] ;
    ]
.

<shape/dataset/edit-metadata>
  a
    sh:Shape .
