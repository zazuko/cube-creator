BASE <urn:hydra-box:api>
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix hydra: <http://www.w3.org/ns/hydra/core#> .
@prefix code: <https://code.described.at/> .
@prefix hydra-box: <http://hydra-box.org/schema/> .
@prefix md: <https://cube-creator.zazuko.com/managed-dimensions/vocab#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix meta: <https://cube.link/meta/> .

<api>
  a hydra:ApiDocumentation ;
  hydra:entrypoint <> ;
.

hydra:Resource
  hydra:supportedOperation
    [
      hydra:method "GET" ;
      code:implementedBy
        [
          a code:EcmaScript ;
          code:link <node:@hydrofoil/labyrinth/resource#get>
        ]
    ] .

md:ManagedDimensions
  a hydra:Class ;
  rdfs:subClassOf hydra:Collection ;
  hydra:supportedOperation
    [
      a hydra:Operation ;
      hydra:method "GET" ;
      code:implementedBy
        [
          a code:EcmaScript ;
          code:link <file:handlers/managed-dimensions#get> ;
        ] ;
    ], [
         a hydra:Operation, schema:CreateAction ;
         hydra:method "POST" ;
         hydra:title "Create shared dimension" ;
         hydra:expects <shape/managed-dimension> ;
         code:implementedBy
           [
             a code:EcmaScript ;
             code:link <file:handlers/managed-dimensions#post> ;
           ]
       ]
.

<shape/managed-dimension> a sh:NodeShape, sh:Shape .

sh:NodeShape
  a hydra:Class ;
  hydra:supportedOperation
    [
      a hydra:SupportedOperation ;
      hydra:method "GET" ;
      code:implementedBy
        [
          a code:EcmaScript ;
          code:link <file:handlers/shape#get> ;
        ] ;
    ] ;
.

md:ManagedDimensionTerms
  a hydra:Class ;
  rdfs:subClassOf hydra:Collection ;
  hydra:supportedOperation
    [
      a hydra:SupportedOperation ;
      hydra:method "GET" ;
      code:implementedBy
        [
          a code:EcmaScript ;
          code:link <file:handlers/managed-dimensions#getTerms> ;
        ] ;
      hydra-box:variables
        [
          a hydra:IriTemplate ;
          hydra:template "/terms{?dimension}" ;
          hydra:variableRepresentation hydra:ExplicitRepresentation ;
          hydra:mapping
            [
              a hydra:IriTemplateMapping ;
              hydra:property schema:inDefinedTermSet ;
              hydra:required true ;
              hydra:variable "dimension" ;
            ]
        ] ;
    ] .
